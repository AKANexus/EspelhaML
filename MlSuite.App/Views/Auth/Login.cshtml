@{
    Layout = null;
}

<html>

<head>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet" />
    <style>
        html,
        body {
            height: 100%;
        }
    </style>
</head>

<body>
    <main>
        <div class="d-flex justify-content-center align-items-center" style="height: 90.5%;">
            <div class="shadow-3-strong p-4" style="width: 384px">

                <h2 class="text-center">ML Suite</h2>
                @if (!string.IsNullOrWhiteSpace((string?)TempData["message"]))
                {
                    <div class="note note-danger mb-3">
                        @TempData["message"]
                    </div>
                }
                <form>
                    <div class="p-2">
                        <div class="form-outline">
                            <input type="text" id="username" class="form-control" />
                            <label class="form-label" for="username">Nome de usuário</label>
                        </div>
                    </div>
                    <div class="p-2">
                        <div class="form-outline">
                            <i class="far fa-eye trailing"></i>
                            <input type="password" id="password" class="form-control" />
                            <label class="form-label" for="password">Senha</label>
                        </div>
                    </div>
                    <div class="d-flex flex-row p-2 justify-content-between">
                        <div>Não tem uma conta?<br /> <a asp-action="RegisterGet">Registre-se!</a></div>
                        <div>
                            <button type="button" class="btn btn-primary">LOGIN</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>
    <footer class="text-center text-lg-start bg-light text-muted">
        <div class="text-center p-2 mt-5" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2023 Não sou web designer -
            <a class="text-reset fw-bold" href="https://mdbootstrap.com/">MDBootstrap.com</a>
        </div>
    </footer>







    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>
</body>

</html>